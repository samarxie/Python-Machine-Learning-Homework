def ave_length(str):
    fraction_str = 1
    frequency = 1
    frequency_list = []
    for i in range(len(str) - 1):
        if str[i] == str[i + 1]:
            frequency += 1
        else:
            frequency_list.append(frequency)
            frequency = 1
            fraction_str += 1

    print(len(str)/fraction_str)

ave_length("aabbcddaaaad")
